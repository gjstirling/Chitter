<div class="peeps">
  <ul>
    <% @posts.reverse.each do |post| %>
      <li><%= post.peep %> </li>
      <p><%=post.username%> @ <%= post.time_stamp %></p>
      <% if @user %>
        <% if post.user_id == @user.id %>
          <button>Delete</button>
        <% end %>
      <% end %>
    <% end %>
  </ul> 
</div>



