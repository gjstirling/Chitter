<h3> <%= flash[:notice] %> </h3>
<% if @user %>
  <h3> Welcome <%= @user.username %> </h3>
<% end %>

<a href="/posts/new">Create a new post</a>
<ul>
  <% @posts.reverse.each do |post| %>
    <li><%= post.peep %></li>
    <li>Posted @ <%= post.time_stamp %></li>
  <br>
  <% end %>
</ul>

<a href="/">home</a>
<form action="/sessions/destroy" method="post">
  <input type="submit" value="Sign out" />
</form>
